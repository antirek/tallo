extends _layout

block menu

  .pure-menu.pure-menu-horizontal
    ul.pure-menu-list
      li.pure-menu-item
        a.pure-menu-link(href='/') Servers

block content

  .pure-menu.custom-restricted-width
    span.pure-menu-heading Servers
      ul.pure-menu-list
        each server in servers
          li.pure-menu-item
            a.pure-menu-link(href='../server/' + server.name)
              span= server.name

