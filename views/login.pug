extends _layout
block content
    form.pure-form.pure-form-aligned(method="post")
        fieldset
            .pure-control-group
                label(for="name") Name
                input#name(type="text" name="name" placeholder="Name")
            .pure-control-group
                label(for="pass") Password
                input#pass(type="password" name="pass" placeholder="Password")
            .pure-controls
                button.pure-button.pure-button-primary(type="submit") Sign up